<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LookABook.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="LookABook.TextInputLayoutDisabled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LookABook.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">


    </style>

    <style name="LookABook.Button" parent="Widget.MaterialComponents.Button">


        <item name="elevation">@dimen/mtrl_btn_elevation</item>

    </style>


    <style name="LookABook.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LookABook.Search_View" parent="Widget.AppCompat.SearchView.ActionBar">

        <item name="android:background">@drawable/rectangle_shape</item>
    </style>

    <style name="profile_photo_round" parent="">

        <item name="android:shape">oval</item>
        <item name="android:radius">24dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">50dp</item>

    </style>

    <style name="text_input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>


    <style name="LookABook.primaryTextViewBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="LookABook.primaryTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>

    </style>

    <style name="LookABook.priceText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/priceColor</item>
    </style>

</resources>